.table-modal
    @extend .content
    filter: none !important
    position fixed
    size 100%
    top 0
    margin 0
    left 0
    z-index: 30
    justify-content: flex-start
    overflow: auto
    max-height: 100%
    transform: translateX(100%)
    transition: .3s transform
    &__content
        padding: 30px 25px
        @media (min-width: scr_sm)
            padding: 80px 60px 30px
    .scroll__wrap
        margin-right 0    
    &--active
        transform: translateX(0%)
    h1, h2, h3
        font-family 'GothamPro'
        font-weight bold
    &__close
        @media (max-width: scr_sm - 1px)
            size 40px
            position fixed
            svg
                size 20px
        @extend .map__close

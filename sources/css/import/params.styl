.params
    width: 100%
    overflow auto
    position relative
    margin-bottom 25px
    &__frame
        float left
        overflow auto
        width 100%
        position relative
        -webkit-overflow-scrolling: touch
    &:after, &:before
        content ""
        width 70px
        height 100%
        position absolute
        top 0
        right 0
        z-index 30
        t opacity
        pointer-events none
        background: linear-gradient(to right, rgba(255, 255, 255, 0) 0%,rgba(255, 255, 255, 1) 100%)
        @media (min-width: scr_sm)
            display none !important
    &:before
        right auto
        left 0
        background: linear-gradient(to right, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 0) 100%)
    &:before
        opacity 0
    &--right
        &:after
            opacity 0
    &--left
        &:before
            opacity 1
.param
    display: flex
    justify-content: space-between
    align-items: center
    padding: 13px 0 10px
    font-weight 300
    font-size 95%
    min-width 600px
    &--title
        border-bottom: 2px solid alpha(#000000, .5)
        font-weight bold
        font-family: 'GothamPro'
        font-size 110%
    &:not(^[0]--title) + &
        border-top: 1px solid #ccd2d7
    & + &--title
        margin-top 25px
        border-top: 0 !important

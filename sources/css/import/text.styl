.text
    color #3a3a3a
    font-size 14px
    line-height 1.7
    padding-bottom 20px
    @media (min-width: scr_sm)
        font-size 15px
        padding-bottom 0
    @media (min-width: scr_lg)
        font-size 16px
    h1
        font-size 30px
        @media (min-width: scr_sm)
            font-size 50px
    h2

        font-weight 900
        font-family 'GothamPro'
        font-size 23px
        @media (min-width: scr_sm)
            font-size 40px
    h4
        text-transform uppercase
        font-weight bold
        font-family: 'GothamPro'
        font-size 18px
        border-bottom: 5px solid orange
        padding-bottom 10px
        margin-bottom 25px
    h5
        font-size 15px
        font-weight bold
        font-family 'GothamPro'
        text-transform uppercase
    ul, ol
        padding-left 25px
        margin-bottom 25px
        margin-top 10px
    p a
        border-line(alpha(orange,.4))
        color orange
    a&__link, p a&__link
        background transparent
        color #3a3a3a
        &:hover
            border-line(alpha(orange,.4))
            color orange
    &__divider
        border-bottom 1px solid alpha(orange, .3)
        margin 20px 0 25px
    p
        margin-bottom 20px
        @media (min-width: scr_lg)
            margin-bottom 25px

    img
        max-width: 100%
        margin-bottom 25px
    img&__image
        &--medium
            @media (min-width: scr_sm)
                max-width: 50%
        &--small
            @media (min-width: scr_sm)
                max-width: 35%
        &--smallest
            max-width: 20%
        &--right
            clear: both;
            margin-left 20px
            float right
        &--left
            clear: both
            margin-right 20px

            float left
    &__blockquote
        text-transform uppercase
        font-family: 'GothamPro'
        font-weight bold
        line-height 1.7
        font-size 95%
        padding-top 0px
        padding-left 25px
        border-left 5px solid orange

        margin-bottom 25px
        margin-top 0px

a.button
    display inline-block
    border 3px solid orange
    min-width: 190px
    text-align center
    padding 0 20px
    height 44px
    line-height 41px
    margin 5px 0
    background transparent
    font-family 'GothamPro'
    font-weight bold
    color black
    font-size 15px
    text-transform uppercase
    &:hover
        background-color orange
        color white
    &--small
        background-color orange
        color white
        font-size 13px
        min-width: 162px
        height: 39px
        line-height 36px
        &:hover
            color orange
            background-color white

.file
    display: inline-flex
    align-items: center
    color #25282e
    margin-right 20px
    margin-bottom 20px
    @media (min-width: 550px)
        margin-bottom 0
        max-width: 32%
    &:hover
        color orange
    svg
        min-width: 22px
        margin-right 10px
        path
            fill orange
    &__name
        display: inline
        font-size 11px
        text-transform uppercase
        font-family: 'GothamPro'
        font-weight bold
        span
            border-line(alpha(#25282e, .5))
            ^[0]:hover &
                border-line(alpha(orange, .5))

.pages
	width 100%
	&__item
		display inline-block
		color orange
		font-size 14px
		padding 3px 4px 0
		min-width 25px
		text-align center
		border 1px solid transparent
		&:hover, &--active
			border-color orange
			color: orange

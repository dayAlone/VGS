.footer
    position relative
    z-index: 25
    font-size 11px
    height: 65px
    display: flex
    justify-content: flex-start
    align-items: center
    font-weight 400
    color alpha(white, .5)
    &__address,
    &__contacts,
    &__copyright
        padding-right 40px
    &__certs,
    &__radia
        margin-left auto
    &__certs
        @extend .page__hide-with-menu
    &__link
        color alpha(white, .5)
        &:hover
            color orange

    &--dark
        color dark_blue
        & ^[0]__link
            color dark_blue
            &:hover
                color orange

.radia
    color alpha(white, .5)
    display flex
    align-content: center
    &__logo
        margin-right 10px
    &:hover
        color orange
        svg
            path
                fill orange
    svg
        size 27px
        path
            fill alpha(white, .5)

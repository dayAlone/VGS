.parsley-errors-list
	display none
	&.filled + a.file__trigger
		&, &:hover
			border-color red !important
			color red !important
			background-color white !important

.file

	.row
		margin-top 4px
	label
		text-align left !important
	&__name
		font-size 13px
		width 100%
	&__description
		font-size 11px
	&__trigger
		max-width 100%
		min-width 0
		font-size 14px
		overflow hidden
		height 32px
		line-height 33px
.feedback__success
	display none

#Nav
	@media (min-width: scr_md)
		display none !important
.modal
	z-index 30000000
	font-family: 'GothamPro'
	background-color #fefefe
	.modal-dialog
		padding 3px 10px
	@media (min-width: scr_md)
		background-color rgba(0,0,0,0)
	&-lg
		@media (min-width: scr_md)
			width 750px
	.lang
		position relative
		top -3px
		&__trigger
			font-size 13px
			font-weight 400
			margin-right 15px
			&:first-of-type:after
				background-color blue
				opacity 1
				right -11px
				top -7px
	h4
		font-weight 300
		font-size 32px
		margin-bottom 30px
		span
			color blue
			font-size 15px
			width 100%
			display: inline-block
			font-weight: normal
			margin-bottom 10px

	&__form
		margin 0 auto
		max-width 90%
	&__success
		display none
	&__required
		font-size 11px
		line-height 1
		display inline-block
		margin-top 23px

	.row + .row, &__footer
		margin-top 30px
	label
		text-align: center
		width 100%
		font-size 11px
		text-transform: uppercase
		margin-bottom 7px
		font-weight 600
		color black
	ul + label, input + label
		margin-top 20px
	.captcha
		height 32px
		background-position center center
		background-repeat no-repeat
		background-size contain
		width calc(100% - 35px)
		float left
		&__refresh
			float right
			background transparent !important
			padding-top 4px
			&:hover svg path
				fill orange
			svg
				width 25px
				height 25px
				position relative
				path
					fill blue2
	.captcha, input[type="text"], input[type="email"], input[type="password"], textarea
		border 1px solid alpha(gray, .6)
		t border
		appearance none
		&.parsley-error
			border-color red !important
	input
		&:focus
			outline 0
		&[type="text"], &[type="email"], &[type="password"]
			height 32px
			line-height 32px
			width 100%
			text-align: center
			padding 0 10px
			color black
			&:focus
				border-color orange
			&.parsley-error
				border-color red
				&:focus
					border-color alpha(red,.7)
		&[type="submit"]
			appearance none
			border 0
			margin-bottom 0
			font-size 13px
			background blue2
			width 185px
			max-width 100%
			height 42px
			line-height 35px
			font-weight bold
			text-transform uppercase
			color white
			margin-top 36px
			font-size 15px
			t all
			background orange
			border 3px solid orange
			&:hover
				background white
				color orange
	textarea
		&:focus
			outline 0
		min-height 80px
		resize none
		width 100%
		text-align: center
		padding 5px 10px
		color black
		&.parsley-error
			border-color red
		&:focus
			border-color orange
	.close
		margin-top 10px
		font-size 13px
		color gray
		border-line(alpha(@color, .5))
		&:hover
			color orange
			border-line(alpha(@color, .5))
	&-content
		border-radius 0
		min-height 100px
		padding 20px 15px 15px
		@media (max-width: scr_sm)
			box-shadow none
			border 0
		@media (min-width: scr_sm)
			padding 20px 40px 60px
	&-frame
		width 100%
		border 2px solid black
		min-height 100px
		position relative
		padding 30px
		&:after
			content attr(data-title)
			position absolute
			background white
			text-transform: uppercase
			font-weight: bold
			padding 0 20px
			top -8px
			left 50%
			font-size 13px
			letter-spacing 6px
			transform translateX(-50%)
	&-backdrop
		background white
		&.in
			opacity 1
		@media (min-width: scr_sm)
			background black
			&.in
				opacity .8

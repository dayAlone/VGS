.equipments
    display flex
    flex-wrap: wrap
    margin-right -15px
    margin-left -15px
    &__name
        font-size 14px
    &__divider
        flex-basis: 100%
        margin 30px 0 60px
        border-bottom: 1px solid alpha(#bec0ca, .5)
    &__item
        margin 0 10px 20px
        flex 1 1 50%
        color #2c3648
        overflow hidden
        flex-basis: calc(50% - 20px)
        max-width: @flex-basis
        @media (min-width: 480px)
          flex-basis: calc(33.33333% - 30px)
          max-width: @flex-basis
        @media (min-width: scr_sm)
            margin 0 15px 30px
            flex-basis: calc(20% - 30px)
            max-width: @flex-basis
        @media (min-width: scr_lg)
            flex-basis: calc(33.33333% - 30px)
            max-width: @flex-basis
        &:hover
            color orange
            & ^[0]__photo:after
                border-color orange
    &__photo
        flex-grow: 1
        width calc(100% - 40px)
        padding-bottom calc(100% - 40px)
        background-position center
        background-repeat no-repeat
        background-size contain
        margin 20px 20px 30px
        position relative
        &:after
            position absolute
            content: ""
            border 1px solid #bec0ca
            size calc(100% + 40px)
            top -20px
            transition: .3s border
            left -20px

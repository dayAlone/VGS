.buttons
    min-height: 40px
    display flex
    flex-wrap: wrap


    justify-content: space-around
    @media (min-width: scr_sm)
        margin-right -10px
        margin-left -10px
    @media (min-width: scr_md)
        justify-content: flex-start
    @media (min-width: scr_lg)
        flex-wrap: nowrap
        justify-content: space-around
    &--margin
        @media (min-width: scr_sm)
            margin 25px -10px 70px
    &__item
        flex 1
        color #e3e9ed
        text-transform uppercase
        font-family: 'GothamPro'
        border 10px solid orange
        background-color black

        line-height 1.2

        display flex
        align-items: center
        overflow hidden
        transition: .3s background
        flex-basis: calc(100% - 20px)
        font-size 15px
        margin-bottom 15px
        padding 15px 25px 12px
        @media (min-width: 480px)
            margin 10px
            flex-basis: calc(50% - 20px)
        @media (min-width: scr_sm)
            padding 25px 25px 22px


            font-size 19px
        @media (min-width: scr_md)
            max-width: 35%

        @media (min-width: scr_lg)
            margin 0 10px
            flex-basis: 0
            font-size 21px
        @media (min-width: 1400px)
            font-size 23px

        &:hover
            color white
            background-color alpha(black, .4)
    &:not(^[0]--small)
        @extend .page__hide-with-menu-desktop

    &--production
        & ^[0]__item
            &:last-of-type
                @media (min-width: scr_lg)
                  flex-grow: .55
    &--index
        @extend .page__hide-with-menu-mobile
    &--small
        justify-content: space-around
        max-width: 1024px
        align-items: stretch
        flex-wrap: wrap
        margin-right -7px
        margin-left -7px
        @media (min-width: scr_md)
            flex-wrap: nowrap
            width 100%
        & ^[0]__item
            flex initial
            flex-grow: 1
            justify-content: center
            text-align center
            background-color transparent
            margin 7px
            border 1px solid orange
            font-weight bold
            flex-basis: calc(50% - 14px)
            padding 12px 5px 10px
            font-size 9px
            @media (min-width: scr_xs)
                padding 12px 10px 10px
                font-size 11px
            @media (min-width: scr_sm)
                font-size 13px
                padding 14px 20px 10px
            @media (min-width: scr_md)
                flex-basis: calc(25% - 14px)
            @media (min-width: scr_lg)
                font-size 15px
            &:hover
                color white
                background-color orange

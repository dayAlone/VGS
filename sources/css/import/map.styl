.map
    position fixed
    top 0
    left 0
    z-index: 200
    size 100%
    background-color white
    opacity: 0
    visibility: hidden;
    transition: .3s opacity .3s
    &--active
        opacity: 1
        visibility: visible
    &__content
        position absolute
        size 100%
    &__close
        position absolute
        z-index: 20
        top 10px
        right 10px
        size 60px
        display flex
        justify-content: center
        align-items: center
        background-color orange
        opacity: .5
        t opacity
        svg
            size 35px
            path
                fill white
        &:hover
            opacity: 1

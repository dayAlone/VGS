.toolbar
    font-family: 'GothamPro'
    font-weight bold
    color white
    display: flex
    width: 100%
    align-content: center
    justify-content: flex-start
    position relative
    z-index: 3000
    font-size 12px
    margin-bottom 10px
    @media (min-width: scr_sm)
        margin-bottom 30px
    @media (min-width: scr_md)
        font-size 13px
    @media (min-width: scr_lg)
        margin-bottom 0
    &__nav,
    &__lang,
    &__contacts
        align-self: center
    &__contacts
        margin-left auto
        display none
        @media (min-width: 550px)
            display block
        br
            @media (min-width: scr_md)
                display none
    &__nav
        margin-left auto
        @media (min-width: 550px)
            margin-left 25px
        @media (min-width: scr_md)
            margin-left 40px
        &-close
            position absolute
            right 0
            top 50%
            transform: translateY(-50%)
            @extend .page__show-with-menu
            svg
                path
                    fill orange
            &:hover
                path
                    fill white
    &__link
        text-transform uppercase
        font-weight bold
        color white
        margin 0 13px
        white-space: nowrap
        @extend .page__hide-with-menu
        &:hover
            color orange
    &__logo
        position relative
        top -3px
        margin-right 15px
        align-self: center
        @media (min-width: scr_sm)
            margin-right 30px
        @media (min-width: scr_md)
            margin-right 60px
        svg
            size 83px 50px
            @media (min-width: scr_sm)
                size 93px 60px
            @media (min-width: scr_md)
                size 123px 75px
            path
                fill white
    &__dropdown
        position absolute
        left calc(50% + 60px)
        top 16px
        z-index: 20
        @extend .page__hide-with-menu
    &--black
        @media (min-width: scr_lg)
            width auto
            & ^[0]__link
                color black
                &:hover
                    color orange
            & ^[0]__nav
                color black
                svg
                    path
                        fill black

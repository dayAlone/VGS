.dropdown
    position relative
    height 43px
    min-width: 127px
    font-family: 'GothamPro'
    font-weight bold
    &__frame
        position absolute
        top 100%
        background-color orange
        width 100%
        padding 3px 0px 2px
        opacity: 0
        transition: .3s opacity .1s, .3s transform .1s, .3s visibility .1s
        visibility: hidden
        z-index: 10
        transform: translateY(-40px)
    &__select
      opacity 0
      position absolute
      z-index -1
      pointer-events none
      top 0
      left 0
      width 100%
      height 100%
      min-height 100%
      .mobile &
        z-index 20
        pointer-events all
    &__item
        color white
        width 100%
        line-height 2
        display block
        font-size 14px
        padding: 2px 23px 0
        &:hover
            background-color alpha(white,.1)
            color white
    &__trigger
        padding 0 20px
        width 100%
        line-height 40px
        height 44px
        cursor: pointer
        color black
        font-size 15px

        position relative
        z-index: 20
        display block
        border 3px solid orange
        transition-delay: .3s
        &:after

            content ""
            top: 50%
            left: 100%
            border: solid transparent
            content: " "
            height: 0
            width: 0
            position: absolute
            pointer-events: none
            border-color: rgba(0, 0, 0, 0)
            border-top-color: black
            border-width: 7px
            transform: translateX(-50%) scaleX(.7)
            margin-left -17px
            margin-top -3px
            transition: .3s border .3s
    &:hover
        & ^[0]__trigger
            color white
            background-color orange
            transition-delay: 0s
            &:after
                transition-delay: 0s
                border-top-color: white
        & ^[0]__frame
            visibility: visible
            opacity: 1
            transform: translateY(0)


.back
    @extend .dropdown__trigger
    width: auto
    display: flex
    align-items: center
    justify-content: center
    font-size 13px
    padding-left 15px
    transition: .3s background, .3s color
    position relative
    top 2px
    &:after
        display none
    svg
        max-width: 20px
        max-height: 12px
        margin-right 10px
        position relative
        top 1px
        path
            transition: .3s fill
    &:hover
        background-color orange
        color white
        svg path
            fill white

.licenses
    display: flex
    flex-wrap: wrap
    justify-content: space-around
    margin-right -20px
    margin-left -20px
    &__image
        width 100%
        min-height: 205px
        margin-bottom 25px
        padding: 10px
        background-size contain
        background-repeat no-repeat
        background-position center center
        position relative
        &:after
            content ""
            width 100%
            height calc(100% + 20px)
            top -10px
            left -10px
            position absolute
            left 0px
            border 1px solid #bec0ca
            t border
    &__item
        width (100/3)%
        padding 20px 20px 30px
        color: black
        &:hover
            color orange
            & ^[0]__image:after
                border-color: orange

    &__title
        font-size 11px
        font-weight 400

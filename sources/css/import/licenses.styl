.licenses
    display: flex
    flex-wrap: wrap
    justify-content: flex-start
    margin-right -10px
    margin-left -10px
    @media (min-width: scr_sm)
        margin-right -20px
        margin-left -20px
    &__image
        width 100%
        margin-bottom 25px
        padding: 10px
        padding-bottom 100%
        background-size contain
        background-repeat no-repeat
        background-position center center
        position relative
        &:after
            content ""
            width 100%
            height calc(100% + 20px)
            top -10px
            left -10px
            position absolute
            left 0px
            border 1px solid #bec0ca
            t border
    &__item

        padding 20px 10px 30px
        color: black
        width (100/2)%
        @media (min-width: 480px)
            width (100/3)%
        @media (min-width: scr_sm)
            padding 20px 20px 30px
            width (100/4)%
        @media (min-width: scr_lg)
            width (100/3)%
        &:hover
            color orange
            & ^[0]__image:after
                border-color: orange

    &__title
        font-size 11px
        font-weight 400
